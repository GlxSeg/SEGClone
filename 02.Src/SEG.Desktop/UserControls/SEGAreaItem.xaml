<UserControl x:Class="SEG.Desktop.UserControls.SEGAreaItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="240" d:DesignWidth="200">
    <Grid>
        <Canvas x:Name="c" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#FFFAA519" MouseDown="c_MouseDown" >
            <Canvas x:Name="cImg" Width="180" Height="180" Canvas.Left="10" Canvas.Top="10" Background="White" >
                <Image x:Name="iThumb" Height="180" Width="180" />
            </Canvas>
            <Label x:Name="labName" Content="Label" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Canvas.Left="10" Canvas.Top="190" Width="180" Height="40" FontFamily="Segoe UI" FontSize="18" Foreground="White"/>
        </Canvas>
    </Grid>
</UserControl>
